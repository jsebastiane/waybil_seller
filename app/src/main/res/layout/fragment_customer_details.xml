<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/roundedfragment_shape"
        tools:context=".view.customers.CustomerDetailsFragment">

        <TextView
            android:id="@+id/customerName_Detailsfragment"
            style="@style/FragmentHeaders"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:text="-"
            android:gravity="start"
            app:layout_constraintEnd_toStartOf="@+id/close_fragment_customerDetails"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/close_fragment_customerDetails"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_close" />

        <LinearLayout
            android:id="@+id/customerDetails_detailsFragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/customerName_Detailsfragment"
            android:background="@drawable/order_product_bg">

            <TextView
                android:id="@+id/customerDetails_address"
                style="@style/DarkFont"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="top"
                android:text="-"
                android:textSize="15sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/customerDetails_phoneNumber"
                style="@style/DarkFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="-"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:textSize="15sp" />
        </LinearLayout>


        <waybilmobile.company.waybil.util.CustomeNestedScrollView
            android:id="@+id/customerDetails_scrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/customerDetails_detailsFragment">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <fragment
                    android:id="@+id/customerDetails_map"
                    android:name="waybilmobile.company.waybil.util.CustomSupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="4dp" />



                <RadioGroup
                    android:id="@+id/radioGroup_customerDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioSummary_customerDetails"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:focusable="true"
                        android:text="@string/summary"
                        android:textAlignment="center"
                        android:textColor="@drawable/category_inverseselector_toggle"
                        android:textSize="15sp" />



                    <RadioButton
                        android:id="@+id/radioTransactions_customerDetails"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:text="@string/transactions"
                        android:focusable="true"
                        android:textAlignment="center"
                        android:textColor="@drawable/category_inverseselector_toggle"
                        android:textSize="15sp" />

                </RadioGroup>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/summary_customerDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:layout_marginTop="8dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:background="@drawable/dark_button"
                            android:layout_height="50dp"
                            android:layout_marginHorizontal="8dp"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/WhiteFont"
                                android:id="@+id/ordersMadeHeader_customerDetails"
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:layout_height="match_parent"
                                android:text="@string/orders_made" />
                            <TextView
                                style="@style/WhiteFont"
                                android:id="@+id/ordersMade_customerDetails"
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:gravity="center"
                                android:layout_height="match_parent"
                                android:text="---" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/dark_button"
                            android:layout_marginTop="8dp"
                            android:layout_marginHorizontal="8dp"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/WhiteFont"
                                android:id="@+id/moneySpentHeader_customerDetails"
                                android:layout_width="0dp"
                                android:gravity="center"
                                android:layout_weight="2"
                                android:layout_height="match_parent"
                                android:text="@string/money_spent" />
                            <TextView
                                style="@style/WhiteFont"
                                android:id="@+id/moneySpent_customerDetails"
                                android:layout_width="0dp"
                                android:gravity="center"
                                android:layout_weight="3"
                                android:layout_height="match_parent"
                                android:text="---" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="8dp"
                            android:layout_marginHorizontal="8dp"
                            android:background="@drawable/dark_button"
                            android:layout_height="50dp"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/WhiteFont"
                                android:id="@+id/lastOrderHeader_customerDetails"
                                android:layout_width="0dp"
                                android:gravity="center"
                                android:layout_weight="2"
                                android:layout_height="match_parent"
                                android:text="@string/recent_order" />

                            <TextView
                                style="@style/WhiteFont"
                                android:id="@+id/lastOrder_customerDetails"
                                android:layout_width="0dp"
                                android:gravity="center"
                                android:layout_weight="3"
                                android:layout_height="match_parent"
                                android:text="---" />

                        </LinearLayout>




                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/transactions_CustomerDetails"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:visibility="visible">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/transactionsRecycler_CustomerDetails"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <ProgressBar
                    android:id="@+id/progressBar_customerDetails"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:padding="90dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/transactionMessage_customerDetails"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/no_data_to_show"
                    android:textSize="15sp"
                    style="@style/DarkFontBold"
                    android:gravity="center"
                    android:visibility="gone"
                    />


            </LinearLayout>
        </waybilmobile.company.waybil.util.CustomeNestedScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
