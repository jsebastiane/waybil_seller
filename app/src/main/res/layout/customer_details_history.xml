<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/whitebg_bottom_border">


        <LinearLayout
            android:id="@+id/transactCustomer_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="208dp"
            tools:layout_editor_absoluteY="24dp">

            <TextView
                android:id="@+id/transactionDate_customerDetails"
                style="@style/DarkFont"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="00/00/0000" />

            <TextView
                android:id="@+id/transactionAmount_customerDetails"
                style="@style/DarkFont"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Q000,000" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
