<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_transaction"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/light_button">


        <TextView
            android:id="@+id/customerName_transaction"
            style="@style/DarkFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Tienda San Juan"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/numberOfItems_transaction"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/numberOfItems_transaction"
            style="@style/DarkFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="21"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/invoiceNumber_transactions"
            app:layout_constraintStart_toEndOf="@+id/customerName_transaction"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/invoiceNumber_transactions"
            style="@style/DarkFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="EA1001245AC"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/totalValue_transactions"
            app:layout_constraintStart_toEndOf="@+id/numberOfItems_transaction"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/totalValue_transactions"
            style="@style/DarkFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="3456"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/invoiceNumber_transactions"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
